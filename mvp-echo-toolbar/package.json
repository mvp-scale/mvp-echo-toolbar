{
  "name": "mvp-echo-toolbar",
  "version": "2.0.0",
  "description": "MVP-Echo Toolbar - System Tray Voice-to-Text Transcription",
  "main": "app/main/main-simple.js",
  "scripts": {
    "dev": "concurrently --prefix-colors \"cyan,yellow\" --prefix \"[{name}]\" --names \"renderer,electron\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173",
    "dev:electron": "NODE_ENV=development electron --no-sandbox --ozone-platform-hint=auto app/main/main-simple.js",
    "build": "vite build",
    "dist": "npm run build && electron-builder --win --publish=never",
    "start": "electron .",
    "test": "echo \"No tests yet\""
  },
  "keywords": [
    "voice-to-text",
    "transcription",
    "electron",
    "system-tray",
    "windows11"
  ],
  "author": "MVP-Echo Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mvp-scale/mvp-echo-toolbar.git"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.mvpecho.toolbar",
    "productName": "MVP-Echo Toolbar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "app/stt",
        "to": "resources/stt"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
